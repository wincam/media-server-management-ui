{
    "extends": "stylelint-config-standard",
    "plugins": [
        "stylelint-scss"
    ],
    "rules": {
        "indentation": 4,
        "color-hex-length": "short",
        "no-eol-whitespace": [ true, { "ignore": ["empty-lines"] } ],
        "string-quotes": "double",
        "scss/at-import-no-partial-leading-underscore": true,
        "at-rule-no-vendor-prefix": true,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "at-root",
                    "content",
                    "debug",
                    "each",
                    "else",
                    "else if",
                    "error",
                    "extend",
                    "for",
                    "function",
                    "if",
                    "import",
                    "include",
                    "media",
                    "mixin",
                    "return",
                    "warn",
                    "while"
                ]
            }
        ]
    }
}
